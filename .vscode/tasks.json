{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "amigaassembly",
			"vasm": {
				"enabled": true,
				"command": "${config:amiga-assembly.binDir}/vasmm68k_mot",
				"args": [
					"-m68000",
					"-Fhunk",
					"-linedebug",
					"-DDEBUG"
				]
			},
			"vlink": {
				"enabled": true,
				"command": "${config:amiga-assembly.binDir}/vlink",
				"includes": "*.{s,S,asm,ASM}",
				"excludes": "",
				"createStartupSequence": true,
				"createExeFileParentDir": true,
				"exefilename": "../uae/dh0/NeonWorld",
				"entrypoint": "_main.asm",
				"args": [
					"-bamigahunk",
					"-Bstatic"
				]
			},
			"problemMatcher": [],
			"label": "amigaassembly: build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"Run data-tool"
			]
		},
		{
			"type": "amigaassembly",
			"vasm": {
				"enabled": true,
				"command": "${config:amiga-assembly.binDir}/vasmm68k_mot",
				"args": [
					"-m68000",
					"-Fhunk"
				]
			},
			"vlink": {
				"enabled": true,
				"command": "${config:amiga-assembly.binDir}/vlink",
				"includes": "*.{s,S,asm,ASM}",
				"excludes": "",
				"createStartupSequence": true,
				"createExeFileParentDir": true,
				"exefilename": "../uae/dh0_adf/NeonWorld",
				"entrypoint": "_main.asm",
				"args": [
					"-bamigahunk",
					"-Bstatic"
				]
			},
			"problemMatcher": [],
			"label": "amigaassembly: build for ADF",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"Run data-tool"
			]
		},
		{
			"type": "amigaassembly",
			"adfgenerator": {
				"ADFToolsParentDir": "${config:amiga-assembly.binDir}",
				"sourceRootDir": "uae/dh0_adf",
				"outputADFFile": "./dist/NeonWorld.adf",
				"includes": "**/*",
				"excludes": "**/.*",
				"adfCreateOptions": [
					"--label=NeonWorld"
				]
			},
			"problemMatcher": [],
			"label": "amigaassembly: create ADF",
			"dependsOn": [
				"amigaassembly: build for ADF"
			]
		},
		{
			"label": "Run data-tool",
			"type": "shell",
			"command": "./mvnw spring-boot:run -Dspring-boot.run.arguments=\"./data_files_config.yml\"",
			"windows": {
				"command": ".\\mvnw.cmd spring-boot:run -Dspring-boot.run.arguments=\"./data_files_config.yml\""
			},
			"options": {
				"cwd": "./data/data_tool"
			}
		}
	]
}